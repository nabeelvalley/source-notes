{
  "name": "source-notes",
  "displayName": "Source Notes",
  "description": "An extension for reading code",
  "publisher": "NabeelValley",
  "repository": {
    "url": "https://github.com/nabeelvalley/source-notes"
  },
  "author": {
    "name": "Nabeel Valley",
    "url": "https://nabeelvalley.co.za"
  },
  "version": "0.0.1",
  "keywords": [
    "note",
    "notes",
    "reading",
    "task",
    "productivity",
    "todo"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "activityPanel",
          "title": "Source Notes",
          "icon": "$(notebook)"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "source-notes.viewNote",
          "when": "viewItem == note",
          "group": "inline"
        },
        {
          "command": "source-notes.openFile",
          "when": "viewItem == note",
          "group": "inline"
        },
        {
          "command": "source-notes.openFile",
          "when": "viewItem == note"
        },
        {
          "command": "source-notes.viewNote",
          "when": "viewItem == note"
        },
        {
          "command": "source-notes.deleteNote",
          "when": "viewItem == note"
        }
      ]
    },
    "views": {
      "activityPanel": [
        {
          "id": "exportMarkdownPanel",
          "name": "Notes",
          "type": "tree"
        },
        {
          "id": "viewNotePanel",
          "name": "View Note",
          "type": "webview",
          "visibility": "collapsed"
        }
      ]
    },
    "commands": [
      {
        "command": "source-notes.createNote",
        "title": "Source Notes: Create Note",
        "shortTitle": "Create Note",
        "icon": "$(plus)"
      },
      {
        "command": "source-notes.viewNote",
        "title": "Source Notes: View Note",
        "shortTitle": "Edit",
        "enablement": "viewItem == note",
        "icon": "$(eye)"
      },
      {
        "command": "source-notes.exportMarkdown",
        "title": "Source Notes: Export notes to markdown",
        "shortTitle": "Export Markdown",
        "icon": "$(book)"
      },
      {
        "command": "source-notes.deleteNote",
        "title": "Source Notes: Delete Note",
        "shortTitle": "Delete",
        "enablement": "viewItem == note",
        "icon": "$(trash)"
      },
      {
        "command": "source-notes.openFile",
        "title": "Source Notes: Open File",
        "shortTitle": "Open File",
        "enablement": "viewItem == note",
        "icon": "$(go-to-file)"
      }
    ]
  },
  "scripts": {
    "vsce": "vsce",
    "vscode:prepublish": "npm run package",
    "compile": "node ./esbuild.js",
    "package": "node ./esbuild.js",
    "watch": "node ./esbuild.js --watch",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@types/vscode-webview": "^1.57.0",
    "esbuild": "^0.16.10",
    "glob": "^8.0.3",
    "prettier": "^2.8.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.35",
    "@vscode/vsce": "^2.22.0",
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "highlight.js": "^11.9.0",
    "shiki": "^0.14.5"
  }
}
